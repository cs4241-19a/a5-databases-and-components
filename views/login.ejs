<div class="row mt-3">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h3 class="text-center mb-2">Login</h3>
      <% include ./alerts %>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-2">Login</button>
      </form>
      <p align="center" class="lead mt-1">
        <small>Not registered? <a href="/users/signup">Register</a></small>
      </p>
    </div>
  </div>
</div>
